<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <!-- title -->
    <title>JOBACT</title>
    <script
      src="https://kit.fontawesome.com/f7d8e8c4f0.js"
      crossorigin="anonymous"
    ></script>
    <!-- favicon starts -->
    <link rel="shortcut icon" type="image/x-icon" href="images/selection.png" />
    <!-- favicon ends -->
    <link rel="stylesheet" href="css/search.css" />
    <link rel="stylesheet" href="css/company_homepage.css">
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Pacifico&family=Satisfy&display=swap" rel="stylesheet">
  </head>
  <body id="background">
    <!-- nav bar code starts -->
    <div class="nav_bar row_center" style="justify-content: space-around">
      <div class="row_center">
        <span class="job_portal_heading">JobPortal</span>
        <a href="#" class="img_icon"
          ><img
            src="images/selection.png"
            alt="job_portal_icon"
            class="img_icon"
        /></a>
      </div>
      <div
        style="
          color: white;
          font-size: 3.5vh;
          display: flex;
          justify-content: center;
          align-items: center;
        "
      >
        <div>
          <i class="fa-solid fa-user"></i>
          <%= user.fname%> <%= user.lname%>
        </div>

        <div style="margin-left: 1vw;">
          <a href="/signin/sign-out" title="sign out" style="color: white; font-size: 3.5vh"
            ><i class="fa-solid fa-right-from-bracket"></i
          ></a>
        </div>
      </div>
      <!-- navigation options ends -->
    </div>
    <!-- Welcome part of website starts-->
    <div>
      <!-- welcome image -->
      <div>
        <img src="images/intro_img.jpg" id="welcome_img" />
      </div>
      <!-- welcome image ends -->
      <!-- website part of website add ons starts -->
      <div id="background_home_add_ons">
        <!-- website quote starts -->
        <h1 class="absolutepos" style="font-size: 300%; color: white">
          Unleash your potential with us
        </h1>
        <!-- website quote ends -->
        <!-- search box starts -->
        <div
          style="
            display: flex;
            flex-direction: column;
            justify-content: center;
            align-items: center;
          "
        >
          <div id="search_box">
            <div
              style="
                display: flex;
                justify-content: center;
                align-items: center;
              "
            >
              <form
                action="/signin/filter/?user_id=<%=user.id%>"
                method="post"
                style="
                  display: flex;
                  justify-content: center;
                  align-items: center;
                  margin-top: 2.1vh;
                "
              >
                <input
                  id="search_on_home"
                  type="text"
                  name="search"
                  placeholder="search..."
                />
                <button id="search_btn_for_search_on_home">
                  <div id="search_btn_for_search_on_home_text">
                    <div style="color: white">search</div>
                  </div>
                </button>
              </form>
            </div>
          </div>
          <!-- filter options starts -->
          <div class="flex_style" style="display: flex">
            <div class="dropdown">
              <button class="dropbtn">
                <span class="text">Job Level</span
                ><i class="fa-solid fa-angle-up" id="arrow"></i>
              </button>
              <div class="dropdown-content">
                <a href="#">Link 1</a>
                <a href="#">Link 2</a>
                <a href="#">Link 3</a>
              </div>
            </div>
            <div class="dropdown">
              <button class="dropbtn">
                <span class="text">Job Function</span
                ><i class="fa-solid fa-angle-up" id="arrow"></i>
              </button>
              <div class="dropdown-content">
                <a href="#">Link 1</a>
                <a href="#">Link 2</a>
                <a href="#">Link 3</a>
              </div>
            </div>
            <div class="dropdown">
              <button class="dropbtn">
                <span class="text">Employment Type</span
                ><i class="fa-solid fa-angle-up" id="arrow"></i>
              </button>
              <div class="dropdown-content">
                <a href="#">Link 1</a>
                <a href="#">Link 2</a>
                <a href="#">Link 3</a>
              </div>
            </div>
            <div class="dropdown">
              <button class="dropbtn">
                <span class="text">Locations</span
                ><i class="fa-solid fa-angle-up" id="arrow"></i>
              </button>
              <div class="dropdown-content">
                <a href="#">Link 1</a>
                <a href="#">Link 2</a>
                <a href="#">Link 3</a>
              </div>
            </div>
            <div class="dropdown">
              <button class="dropbtn">
                <span class="text">Education</span
                ><i class="fa-solid fa-angle-up" id="arrow"></i>
              </button>
              <div class="dropdown-content">
                <a href="#">Link 1</a>
                <a href="#">Link 2</a>
                <a href="#">Link 3</a>
              </div>
            </div>
          </div>
          <!-- filter options ends -->
          <!-- line starts -->
          <div id="line"></div>
          <!-- line ends -->
          <!-- filters selected starts -->
          <div class="flex_style">
            <% for (let x=0; x<search_list.length;x++) {%>
            <div class="filter_btns">
              <span><%=search_list[x].search%></span>
              <a href="/signin/deleteSearch/?id=<%=search_list[x].id%>&&userid=<%= user.id%>">
                <i class="fa-solid fa-circle-xmark cross"></i
              ></a>
            </div>
            <%}%>
          </div>
          <!-- filters selected ends -->
        </div>
        <!-- search box ends -->
        <!-- JOBS STARTS -->
        <div class="block">
          <span class="heading-block">APPLY FOR JOBS</span>
            <div class="column-arrange">
              <% for (let x=0; x<job_list.length;x++) {%>
                <div class="display-info" style="margin-left: -5vw;">
                  <span class="size1"><%=job_list[x].business_name%></span>
                  <span class="size1"><%=job_list[x].job_description%></span>
                  <span class="size1"><%=job_list[x].job_salary%></span>
                  <span class="size1"><%=job_list[x].email%></span>
                  <a href="/signin/apply-job/?businessname=<%=job_list[x].business_name%>&&jobdescription=<%=job_list[x].job_description%>&&jobsalary=<%=job_list[x].job_salary%>&&businessid=<%=job_list[x].business_id%>&&applicantid=<%=user.id%>&&jobid=<%=job_list[x]._id%>&&applicantemail=<%=user.email%>&&fname=<%=user.fname%>&&lname=<%=user.lname%>" style="text-align: left;">apply</a>
                  
                </div>
                <div class="horizontal-line"></div>
            </div>
            
            <%}%>
        </div>
        <!-- JOB ENDS -->
      </div>
      <!-- website part of website add ons ends -->
    </div>
    <!-- Welcome part of website ends-->
    <!-- main content starts -->
    <div class="companies">
      <h1>Land into your dream companies</h1>
      <!-- companies list starts -->
      <div
        style="
          display: flex;
          flex-direction: row;
          flex-wrap: wrap;
          width: 100vw;
          justify-content: space-around;
        "
      >
        <div class="box">
          <img
            src="https://about.fb.com/wp-content/uploads/2021/10/06_211025_CompanyEC_16x9__30fps__1080-1.gif"
            alt=""
          />
        </div>
        <div class="box">
          <img
            src="https://about.fb.com/wp-content/uploads/2021/10/06_211025_CompanyEC_16x9__30fps__1080-1.gif"
            alt=""
          />
        </div>
        <div class="box">
          <img
            src="https://about.fb.com/wp-content/uploads/2021/10/06_211025_CompanyEC_16x9__30fps__1080-1.gif"
            alt=""
          />
        </div>
        <div class="box">
          <img
            src="https://about.fb.com/wp-content/uploads/2021/10/06_211025_CompanyEC_16x9__30fps__1080-1.gif"
            alt=""
          />
        </div>
        <div class="box">
          <img
            src="https://about.fb.com/wp-content/uploads/2021/10/06_211025_CompanyEC_16x9__30fps__1080-1.gif"
            alt=""
          />
        </div>
        <div class="box">
          <img
            src="https://about.fb.com/wp-content/uploads/2021/10/06_211025_CompanyEC_16x9__30fps__1080-1.gif"
            alt=""
          />
        </div>
      </div>
      <!-- companies list ends -->
    </div>
    <header class="testimonials_header">
      <h1>Testimonials</h1>
      <h2>Lets see what our clients say about us!</h2>
    </header>
    <div class="testimonials">
      <div class="client1">
        <p>
          A testimonial is an honest endorsement of your product or service that
